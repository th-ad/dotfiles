yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

yabai -m config layout bsp

yabai -m config window_origin_display focused
yabai -m config mouse_follows_focus on
yabai -m config focus_follows_mouse autofocus

yabai -m rule --add app="^1Password$" manage=off sticky=on native-fullscreen=off
yabai -m rule --add app="^Activity Monitor$" manage=off sticky=on
yabai -m rule --add app="^App Store$" manage=off
yabai -m rule --add app="^Disk Utility$" manage=off stick=on
yabai -m rule --add app="^Finder$" manage=off sticky=on
yabai -m rule --add app="^Karabiner-Elements$" manage=off sticky=on
yabai -m rule --add app="^Karabiner-EventViewer$" manage=off sticky=on
yabai -m rule --add app="^Messages$" manage=off sticky=on
yabai -m rule --add app="^Orbstack$" manage=off sticky=on
yabai -m rule --add app="^System Settings$" manage=off sticky=on

yabai -m config top_padding 20
yabai -m config bottom_padding 20
yabai -m config left_padding 20
yabai -m config right_padding 20
yabai -m config window_gap 20
